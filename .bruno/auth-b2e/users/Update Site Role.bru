meta {
  name: Update Site Role
  type: http
  seq: 6
}

put {
  url: {{host}}/api/auth-b2e/users/me/sites/:siteId
  body: json
  auth: none
}

params:path {
  siteId: site-uuid-here
}

body:json {
  {
    "role": "CM"
  }
}

docs {
  Update role for a managed site.
  
  Role can be: Owner, CM (Content Manager), or SM (Site Manager).
  Requires valid b2e_accessToken cookie (automatically sent).
}
