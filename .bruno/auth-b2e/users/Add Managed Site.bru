meta {
  name: Add Managed Site
  type: http
  seq: 5
}

post {
  url: {{host}}/api/auth-b2e/users/me/sites
  body: json
  auth: none
}

body:json {
  {
    "siteId": "site-uuid-here",
    "role": "Owner"
  }
}

docs {
  Add a managed site for the current user.
  
  Role can be: Owner, CM (Content Manager), or SM (Site Manager).
  Requires valid b2e_accessToken cookie (automatically sent).
}
