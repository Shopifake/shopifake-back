meta {
  name: Add User to Site
  type: http
  seq: 2
}

post {
  url: {{host}}/api/auth-b2e/users/me/sites/:siteId/users
  body: json
  auth: none
}

params:path {
  siteId: site-uuid-here
}

body:json {
  {
    "email": "user@example.com",
    "role": "CM"
  }
}

docs {
  Add a user to your site.
  
  Role can be: Owner, CM (Content Manager), or SM (Site Manager).
  Only site owners can access this endpoint.
  Requires valid b2e_accessToken cookie (automatically sent).
}
